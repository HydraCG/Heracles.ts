{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "quotemark": [true, "double"],
    "ter-indent": [true, 2],
    "no-extra-semi": true,
    "semicolon": [true, "always"],
    "trailing-comma": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ]
  },
  "jsRules": {
    "max-line-length": {
        "options": [120]
    }
}
}
